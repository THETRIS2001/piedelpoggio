---
export const prerender = true;

import { getCollection } from 'astro:content';
import DefaultLayout from '../../layouts/DefaultLayout.astro';
import Card from '../../components/Card.astro';
import { SITE_CONFIG } from '../../utils/config';
import fs from 'node:fs';
import path from 'node:path';

function getCustomImage(type: 'news' | 'event', slug: string) {
  const folderName = type === 'news' ? 'Notizie Immagini' : 'Eventi Immagini';
  const baseDir = path.join(process.cwd(), 'public', 'documents', folderName);
  const extensions = ['jpg', 'jpeg', 'png', 'webp', 'JPG', 'JPEG', 'PNG'];
  
  for (const ext of extensions) {
    const filename = `${slug}.${ext}`;
    if (fs.existsSync(path.join(baseDir, filename))) {
      return `/documents/${encodeURIComponent(folderName)}/${filename}`;
    }
  }
  
  return `/documents/${encodeURIComponent(folderName)}/${slug}.jpg`;
}

const news = await getCollection('news', ({ data }) => data.published);
const sortedNews = news.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
const itemsPerPage = SITE_CONFIG.collections.news.perPage;
---


<DefaultLayout title="Notizie - Piedelpoggio" description="Tutte le notizie e gli aggiornamenti da Piedelpoggio, borgo medievale nel cuore del Lazio.">
  <main class=" bg-gradient-to-br from-pink-50/30 via-white to-purple-50/20 pt-4 pb-16">
    <!-- Hero Section -->
    <section class="hero-section">
      <!-- Background with gradient -->
      <div class="absolute inset-0 bg-gradient-to-b from-teal-100/70 via-teal-50/50 to-transparent"></div>
      
      <!-- Decorative elements -->
      
      
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 rounded-full blur-3xl opacity-40" style="background: radial-gradient(circle, rgba(29, 155, 140, 0.12) 0%, rgba(29, 155, 140, 0.04) 60%, transparent 100%);"></div>
      
      <div class="relative z-10 container mx-auto px-4 text-center">
        <div class="animate-fade-in">
          <div class="flex items-center justify-center mb-8">
            <div class="hidden md:flex w-20 h-20 rounded-xl sm:rounded-2xl items-center justify-center shadow-xl mr-6" style="background: linear-gradient(135deg, #30D5C8, #26B5AA);">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
              </svg>
            </div>
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight">
              <span class="bg-gradient-to-r from-teal-700 via-teal-600 to-teal-500 bg-clip-text text-transparent">
                NOTIZIE
              </span>
            </h1>
          </div>
          <div class="w-32 h-1.5 rounded-full mx-auto mb-8" style="background: linear-gradient(to right, #30D5C8, #26B5AA, #1D9B8C);"></div>
          <p class="text-lg md:text-xl lg:text-2xl text-gray-600 max-w-4xl mx-auto leading-relaxed font-medium mb-6 md:mb-16">
            Rimani aggiornato su tutte le novità di Piedelpoggio
          </p>
          <div class="flex flex-wrap justify-center gap-3 mt-8 mb-6">
            <span class="px-3 py-1 text-xs md:text-sm font-medium.5 md:px-4 md:py-2 rounded-full text-xs md:text-sm font-medium text-white" style="background-color: #30D5C8;">Aggiornamenti</span>
            <span class="px-3 py-1 text-xs md:text-sm font-medium.5 md:px-4 md:py-2 rounded-full text-xs md:text-sm font-medium text-white" style="background-color: #26B5AA;">Eventi</span>
            <span class="px-3 py-1 text-xs md:text-sm font-medium.5 md:px-4 md:py-2 rounded-full text-xs md:text-sm font-medium text-white" style="background-color: #1D9B8C;">Comunicazioni</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Contenuto principale -->
    <section class="pt-4 pb-16">
      <div class="container mx-auto px-4">
        
        <!-- Filtro per Data -->
        <div class="max-w-6xl mx-auto mb-12">
          <div class="bg-white/90 backdrop-blur-sm rounded-xl sm:rounded-2xl shadow-soft border border-gray-200 p-7">
            <div class="flex flex-col md:flex-row items-center justify-between gap-5">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-lg flex items-center justify-center" style="background: linear-gradient(135deg, #30D5C8, #26B5AA);">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-gray-900">Filtra per Data</h3>
                  <p class="text-sm text-gray-600">Seleziona un periodo per visualizzare le notizie</p>
                </div>
              </div>
              
              <div class="flex flex-col gap-4 w-full md:w-auto">
                <!-- Container per Data e Pulsanti -->
                <div class="flex flex-col gap-4">
                  <!-- Filtro per Data - Inizio e Fine: su mobile uno sotto l'altro -->
                  <div class="flex flex-col sm:flex-row gap-2 sm:gap-4 max-w-full overflow-hidden">
                    <div class="relative flex-1 min-w-0">
                      <label class="block text-xs font-medium text-gray-600 mb-1">Data Inizio</label>
                      <input 
                        type="date" 
                        id="dateFrom"
                        class="px-3 py-2 border border-gray-200 rounded-xl focus:ring-2 focus:ring-teal-500 focus:border-transparent transition-all duration-200 bg-white/80 backdrop-blur-sm text-gray-500 w-full"
                      />
                    </div>
                    <div class="relative flex-1 min-w-0">
                      <label class="block text-xs font-medium text-gray-600 mb-1">Data Fine</label>
                      <input 
                        type="date" 
                        id="dateTo"
                        class="px-3 py-2 border border-gray-200 rounded-xl focus:ring-2 focus:ring-teal-500 focus:border-transparent transition-all duration-200 bg-white/80 backdrop-blur-sm text-gray-500 w-full"
                      />
                    </div>
                  </div>
                  
                  <!-- Pulsanti: Applica a sinistra, Reset a destra -->
                  <div class="flex justify-between gap-3 items-end">
                    <button 
                      id="applyFilter"
                      class="px-6 py-2 rounded-xl text-white font-medium transition-all duration-300 hover:shadow-lg hover:scale-105"
                      style="background: linear-gradient(135deg, #26B5AA, #1D9B8C);"
                    >
                      Applica
                    </button>
                    <button 
                      id="clearFilter"
                      class="px-5 py-2 rounded-xl border border-gray-200 text-gray-600 font-medium hover:bg-gray-50 transition-all duration-200"
                    >
                      Reset
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Lista Notizie -->
        <div class="max-w-6xl mx-auto" id="newsContainer" data-items-per-page={itemsPerPage}>
          {sortedNews.length > 0 ? (
            <div class="space-y-6" id="newsList">
              {sortedNews.map((item, index) => (
                <div class="news-item bg-white/90 backdrop-blur-sm rounded-xl sm:rounded-2xl shadow-soft border border-gray-200 overflow-hidden hover:shadow-lg transition-all duration-300 hover:scale-[1.02]" data-date={item.data.date}>
                  <div class="md:flex md:h-64">
                    <div class="md:w-1/3">
                      <img 
                        src={getCustomImage('news', item.slug)} 
                        alt={item.data.title}
                        class="w-full h-48 md:h-full object-cover"
                      />
                    </div>
                    <div class="md:w-2/3 p-6 md:p-8 flex flex-col justify-between">
                      <div>
                        <div class="flex items-center gap-3 mb-3">
                           <span class="px-3 py-1 text-xs md:text-sm font-medium rounded-full text-xs font-medium text-white" style="background-color: #26B5AA;">
                             Notizie
                           </span>
                           <span class="text-sm text-gray-500">
                             {new Date(item.data.date).toLocaleDateString('it-IT', { 
                               year: 'numeric', 
                               month: 'long', 
                               day: 'numeric' 
                             })}
                           </span>
                         </div>
                         <h3 class="text-lg md:text-xl lg:text-1xl sm:text-3xl font-bold text-gray-900 mb-3 leading-tight">
                           {item.data.title}
                         </h3>
                         <p class="text-gray-600 mb-4 leading-relaxed">
                           {item.data.summary}
                         </p>
                      </div>
                      <div>
                         <a 
                           href={`/notizie/${item.slug}`}
                           class="inline-flex items-center gap-2 px-6 py-3 rounded-xl text-white font-medium transition-all duration-300 hover:shadow-lg hover:scale-105"
                           style="background: linear-gradient(135deg, #26B5AA, #1D9B8C);"
                         >
                           Leggi di più
                           <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                             <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                           </svg>
                         </a>
                      </div>
                    </div>
                  </div>
                </div>
              ))}
              
              <!-- Paginazione Client-Side -->
              <div id="paginationControls" class="flex justify-center mt-12"></div>
            </div>
          ) : (
            <div class="bg-white/90 backdrop-blur-sm rounded-xl sm:rounded-2xl shadow-soft p-12 border border-gray-200 text-center" id="noNewsMessage">
              <div class="w-12 h-12 sm:w-16 sm:h-16 rounded-xl sm:rounded-2xl flex items-center justify-center shadow-lg mx-auto mb-6" style="background: linear-gradient(135deg, #30D5C8, #26B5AA);">
                <svg class="w-6 h-6 sm:w-8 sm:h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
                </svg>
              </div>
              <h3 class="text-lg md:text-xl font-semibold text-gray-900 mb-2">Nessuna notizia disponibile</h3>
              <p class="text-gray-500">Le notizie verranno pubblicate qui non appena disponibili.</p>
            </div>
          )}
        </div>
      </div>
    </section>
  </main>
</DefaultLayout>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const dateFrom = document.getElementById('dateFrom') as HTMLInputElement;
    const dateTo = document.getElementById('dateTo') as HTMLInputElement;
    const applyFilter = document.getElementById('applyFilter');
    const clearFilter = document.getElementById('clearFilter');
    const newsItems = Array.from(document.querySelectorAll('.news-item')) as HTMLElement[];
    const noNewsMessage = document.getElementById('noNewsMessage');
    const newsContainer = document.getElementById('newsContainer');
    const paginationControls = document.getElementById('paginationControls');
    
    // Configurazione paginazione
    const itemsPerPage = newsContainer ? parseInt(newsContainer.dataset.itemsPerPage || '6') : 6;
    let currentPage = 1;
    let filteredItems = [...newsItems];

    function updatePagination() {
      if (!paginationControls) return;
      
      const totalPages = Math.ceil(filteredItems.length / itemsPerPage);
      paginationControls.innerHTML = '';
      
      if (totalPages <= 1) return;
      
      const container = document.createElement('div');
      container.className = 'flex space-x-2';
      
      for (let i = 1; i <= totalPages; i++) {
        const btn = document.createElement('span');
        btn.textContent = i.toString();
        
        if (i === currentPage) {
          btn.className = 'px-4 py-2 text-white rounded-lg shadow-sm cursor-default';
          btn.style.backgroundColor = '#30D5C8';
        } else {
          btn.className = 'px-4 py-2 bg-gray-200 text-gray-600 rounded-lg hover:bg-gray-300 cursor-pointer transition-colors';
          btn.onclick = () => {
            currentPage = i;
            renderNews();
            window.scrollTo({ top: document.querySelector('.hero-section')?.clientHeight || 0, behavior: 'smooth' });
          };
        }
        
        container.appendChild(btn);
      }
      
      paginationControls.appendChild(container);
    }
    
    function renderNews() {
      // 1. Nascondi tutti
      newsItems.forEach(item => {
        item.style.display = 'none';
      });

      // 2. Calcola indici per la pagina corrente
      const startIndex = (currentPage - 1) * itemsPerPage;
      const endIndex = startIndex + itemsPerPage;
      const visibleItems = filteredItems.slice(startIndex, endIndex);

      // 3. Mostra solo quelli della pagina corrente
      visibleItems.forEach(item => {
        item.style.display = 'block';
        item.style.animation = 'fadeIn 0.5s ease-in-out';
      });

      // 4. Aggiorna UI paginazione
      updatePagination();

      // 5. Gestione messaggio "Nessuna notizia"
      if (filteredItems.length === 0) {
        if (noNewsMessage) {
          noNewsMessage.style.display = 'block';
          const h3 = noNewsMessage.querySelector('h3');
          const p = noNewsMessage.querySelector('p');
          if (h3) h3.textContent = 'Nessuna notizia trovata';
          if (p) p.textContent = 'Non ci sono notizie nel periodo selezionato. Prova a modificare i filtri.';
        }
      } else {
        if (noNewsMessage) {
          noNewsMessage.style.display = 'none';
        }
      }
    }
    
    function filterNews() {
      const fromDate = dateFrom?.value ? new Date(dateFrom.value) : null;
      const toDate = dateTo?.value ? new Date(dateTo.value) : null;
      
      filteredItems = newsItems.filter(item => {
        const dateStr = item.dataset.date;
        if (!dateStr) return false;
        const itemDate = new Date(dateStr);
        
        if (fromDate && itemDate < fromDate) return false;
        if (toDate && itemDate > toDate) return false;
        
        return true;
      });

      currentPage = 1; // Reset alla prima pagina quando si filtra
      renderNews();
    }
    
    function clearFilters() {
      if (dateFrom) dateFrom.value = '';
      if (dateTo) dateTo.value = '';
      
      filteredItems = [...newsItems];
      currentPage = 1;
      renderNews();
    }
    
    // Event listeners
    applyFilter?.addEventListener('click', filterNews);
    clearFilter?.addEventListener('click', clearFilters);
    
    // Filtro automatico opzionale (commentato per evitare troppi refresh, decommentare se desiderato)
    // dateFrom?.addEventListener('change', filterNews);
    // dateTo?.addEventListener('change', filterNews);

    // Inizializzazione
    renderNews();
  });
</script>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

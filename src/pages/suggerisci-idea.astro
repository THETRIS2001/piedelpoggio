---
export const prerender = false;

import DefaultLayout from '../layouts/DefaultLayout.astro';
const params = Astro.url.searchParams;
const inviato = params.get('inviato') === '1';
const errore = params.get('errore') === '1';
---

<DefaultLayout title="Suggerisci un'idea - Piedelpoggio">
  <!-- Hero Section -->
  <section class="hero-section">
    <!-- Background with gradient -->
    <div class="absolute inset-0 bg-gradient-to-b from-yellow-100/60 via-yellow-50/40 to-transparent"></div>
    
    <!-- Decorative elements -->
    
    
    
    <div class="relative z-10 container mx-auto px-4 text-center">
      <div class="animate-fade-in">
        <!-- Icona e Titolo centrati -->
        <div class="flex items-center justify-center mb-8">
          <div class="hidden md:flex w-20 h-20 bg-gradient-to-br from-yellow-600 to-amber-600 rounded-xl sm:rounded-2xl items-center justify-center shadow-xl mr-6">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
            </svg>
          </div>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight">
            <span class="bg-gradient-to-r from-yellow-900 via-yellow-700 to-amber-600 bg-clip-text text-transparent">
              SUGGERISCI UN'IDEA
            </span>
          </h1>
        </div>
        <div class="w-32 h-1.5 bg-gradient-to-r from-yellow-500 via-yellow-600 to-amber-500 rounded-full mx-auto mb-8"></div>
        
        <!-- Descrizione centrata sotto -->
        <p class="text-lg md:text-xl lg:text-2xl text-gray-600 max-w-4xl mx-auto leading-relaxed font-medium mb-6 md:mb-16">
          Hai un'idea per migliorare la nostra comunità? Condividila con noi!
        </p>
      </div>
    </div>
  </section>

  <!-- Form Section -->
  <section class="pt-4 pb-6 sm:pb-16 px-4 sm:px-6 lg:px-8 relative">
    <!-- Decorative background elements -->
    
    
    
    {(inviato || errore) && (
      <div id="idea-status-overlay" class="fixed inset-0 z-50 bg-black/50 backdrop-blur-sm flex items-center justify-center">
        <div id="idea-status-card" class="mx-auto max-w-md w-[92%] sm:w-full">
          <div class="rounded-2xl shadow-2xl overflow-hidden bg-white">
            <div class={`px-6 py-4 ${inviato ? 'bg-gradient-to-r from-green-600 to-emerald-600 text-white' : 'bg-gradient-to-r from-red-600 to-rose-600 text-white'}`}>
              <div class="flex items-center gap-3">
                {inviato ? (
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
                ) : (
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01M4.293 4.293l15.414 15.414"/></svg>
                )}
                <h3 class="text-lg font-semibold">{inviato ? 'Proposta recapitata correttamente' : 'Problema durante l\'invio'}</h3>
              </div>
            </div>
            <div class="px-6 py-5">
              {inviato ? (
                <p class="text-gray-700">Abbiamo ricevuto la tua proposta via email. Ti risponderemo appena possibile.</p>
              ) : (
                <p class="text-gray-700">La proposta non è stata recapitata. Riprova più tardi oppure scrivi a <a href="mailto:pro.piedelpoggio@gmail.com" class="text-red-700 underline">pro.piedelpoggio@gmail.com</a>.</p>
              )}
            </div>
          </div>
        </div>
      </div>
    )}
    <div class="max-w-4xl mx-auto relative z-10">
      <!-- Form Card -->
      <div class="bg-white/80 backdrop-blur-sm rounded-xl sm:rounded-2xl shadow-xl p-6 md:p-12 animate-slide-up" style="animation-delay: 0.2s;">
        <div class="flex items-center space-x-4 mb-8">
          <div class="w-12 h-12 sm:w-16 sm:h-16 bg-gradient-to-r from-secondary-500 to-secondary-600 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 sm:w-8 sm:h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
            </svg>
          </div>
          <h2 class="text-1xl sm:text-3xl font-bold text-gray-900">La tua idea conta</h2>
        </div>
        
        <p class="text-base md:text-lg text-gray-600 mb-8 text-justify">
          Compila il form sottostante per condividere la tua proposta con i membri della Pro Loco di Piedelpoggio
        </p>

        <form class="space-y-6" method="POST" action="/api/suggerisci-idea" id="idea-form">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Nome -->
            <div class="animate-slide-up" style="animation-delay: 0.4s;">
              <label for="nome" class="block text-sm font-semibold text-gray-600 mb-2">
                Nome <span class="text-red-600">*</span>
              </label>
              <input 
                type="text" 
                id="nome" 
                name="nome" 
                required
                class="w-full px-4 py-3 border border-primary-200 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all duration-300 bg-white/50 backdrop-blur-sm hover:bg-white/80"
                placeholder="Il tuo nome"
              >
              <div id="nome-error" class="text-red-500 text-sm mt-1 hidden">Inserisci il nome</div>
            </div>

            <!-- Cognome -->
            <div class="animate-slide-up" style="animation-delay: 0.5s;">
              <label for="cognome" class="block text-sm font-semibold text-gray-600 mb-2">
                Cognome <span class="text-red-600">*</span>
              </label>
              <input 
                type="text" 
                id="cognome" 
                name="cognome" 
                required
                class="w-full px-4 py-3 border border-primary-200 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all duration-300 bg-white/50 backdrop-blur-sm hover:bg-white/80"
                placeholder="Il tuo cognome"
              >
              <div id="cognome-error" class="text-red-500 text-sm mt-1 hidden">Inserisci il cognome</div>
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Email -->
            <div class="animate-slide-up" style="animation-delay: 0.6s;">
              <label for="email" class="block text-sm font-semibold text-gray-600 mb-2">
                Email (opzionale)
              </label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                class="w-full px-4 py-3 border border-primary-200 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all duration-300 bg-white/50 backdrop-blur-sm hover:bg-white/80"
                placeholder="la-tua-email@esempio.com"
              >
              <div id="email-error" class="text-red-500 text-sm mt-1 hidden">Formato email non valido</div>
            </div>

            <!-- Telefono -->
            <div class="animate-slide-up" style="animation-delay: 0.7s;">
              <label for="telefono" class="block text-sm font-semibold text-gray-600 mb-2">
                Telefono (opzionale)
              </label>
              <input 
                type="tel" 
                id="telefono" 
                name="telefono" 
                class="w-full px-4 py-3 border border-primary-200 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all duration-300 bg-white/50 backdrop-blur-sm hover:bg-white/80"
                placeholder="123 456 7890"
              >
              <div id="telefono-error" class="text-red-500 text-sm mt-1 hidden">Formato numero non valido (es: 3331234567 o 0612345678)</div>
            </div>
          </div>

          <!-- Idea -->
          <div class="animate-slide-up" style="animation-delay: 0.8s;">
            <label for="idea" class="block text-sm font-semibold text-gray-600 mb-2">
              La tua idea <span class="text-red-600">*</span>
            </label>
            <textarea 
              id="idea" 
              name="idea" 
              required
              minlength="10"
              maxlength="2000"
              rows="6"
              class="w-full px-4 py-3 border border-primary-200 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all duration-300 bg-white/50 backdrop-blur-sm hover:bg-white/80 resize-none"
              placeholder="Descrivi la tua idea (minimo 10 caratteri)"
            ></textarea>
            <div class="flex justify-between items-center mt-2">
              <p class="text-sm text-gray-500">
                Minimo 10 caratteri, massimo 2000
              </p>
              <span id="char-count" class="text-sm text-gray-500">0/2000</span>
            </div>
            <div id="char-error" class="text-red-500 text-sm mt-1 hidden">
              Il testo deve contenere almeno 10 caratteri
            </div>
          </div>

          <!-- Submit Button -->
          <div class="animate-slide-up" style="animation-delay: 0.9s;">
            <button 
              type="submit"
              class="w-full bg-gradient-to-r from-secondary-600 to-secondary-700 hover:from-secondary-700 hover:to-secondary-800 text-white font-semibold py-4 px-8 rounded-xl transition-all duration-300 transform hover:scale-[1.02] hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-secondary-500 focus:ring-offset-2 group relative overflow-hidden"
            >
              <span class="absolute inset-0 bg-gradient-to-r from-secondary-700/80 to-secondary-800/80 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></span>
              <span class="relative flex items-center justify-center gap-2">
                Invia la tua idea
              </span>
            </button>
          </div>
        </form>
        </div>
      </div>
    </div>
  </section>
</DefaultLayout>

<script>
  // Character counter for textarea
  const textarea = document.getElementById('idea');
  const charCount = document.getElementById('char-count');
  const charError = document.getElementById('char-error');
  const form = document.getElementById('idea-form');
  const nome = document.getElementById('nome');
  const cognome = document.getElementById('cognome');
  const email = document.getElementById('email');
  const telefono = document.getElementById('telefono');
  const nomeErr = document.getElementById('nome-error');
  const cognomeErr = document.getElementById('cognome-error');
  const emailErr = document.getElementById('email-error');
  const telErr = document.getElementById('telefono-error');
  
  if (textarea && charCount) {
    textarea.addEventListener('input', () => {
      const currentLength = textarea.value ? textarea.value.length : 0;
      charCount.textContent = `${currentLength}/2000`;
      
      // Hide error message when typing
      if (charError && currentLength >= 10) {
        charError.classList.add('hidden');
      }
      
      // Change color based on character count
      if (currentLength > 1800) {
        charCount.classList.add('text-red-500');
        charCount.classList.remove('text-gray-500', 'text-yellow-500');
      } else if (currentLength > 1500) {
        charCount.classList.add('text-yellow-500');
        charCount.classList.remove('text-gray-500', 'text-red-500');
      } else {
        charCount.classList.add('text-gray-500');
        charCount.classList.remove('text-yellow-500', 'text-red-500');
      }
    });
  }

  // Form validation
  if (form) {
    form.addEventListener('submit', (e) => {
      const ideaText = textarea && textarea.value ? textarea.value : '';
      let ok = true;
      if (!nome || !cognome || !textarea) return;
      const emailVal = email && email.value ? email.value.trim() : '';
      const telVal = telefono && telefono.value ? telefono.value.trim() : '';
      const nomeVal = nome.value ? nome.value.trim() : '';
      const cognomeVal = cognome.value ? cognome.value.trim() : '';
      const emailRx = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      const phoneRx = /^(\+39\s?)?((3[0-9]{2}|32[0-9]|33[0-9]|34[0-9]|36[0-9]|37[0-9]|38[0-9]|39[0-9])\s?\d{6,7}|0[1-9]\d{1,3}\s?\d{6,8})$/;
      if (!nomeVal) {
        ok = false;
        nome.classList.remove('border-primary-200','focus:ring-primary-500');
        nome.classList.add('border-red-300','focus:ring-red-500');
        if (nomeErr) nomeErr.classList.remove('hidden');
      }
      if (!cognomeVal) {
        ok = false;
        cognome.classList.remove('border-primary-200','focus:ring-primary-500');
        cognome.classList.add('border-red-300','focus:ring-red-500');
        if (cognomeErr) cognomeErr.classList.remove('hidden');
      }
      if (emailVal && !emailRx.test(emailVal)) {
        ok = false;
        email.classList.remove('border-primary-200','focus:ring-primary-500');
        email.classList.add('border-red-300','focus:ring-red-500');
        if (emailErr) emailErr.classList.remove('hidden');
      }
      if (telVal && !phoneRx.test(telVal)) {
        ok = false;
        telefono.classList.remove('border-primary-200','focus:ring-primary-500');
        telefono.classList.add('border-red-300','focus:ring-red-500');
        if (telErr) telErr.classList.remove('hidden');
      }
      if (ideaText.length < 10) {
        e.preventDefault();
        if (charError) {
          charError.classList.remove('hidden');
        }
        textarea && textarea.focus && textarea.focus();
        textarea.classList.remove('border-primary-200','focus:ring-primary-500');
        textarea.classList.add('border-red-300','focus:ring-red-500');
        ok = false;
      }
      if (!ok) e.preventDefault();
    });
  }
  function clearErr(el, err) {
    el.classList.remove('border-red-300','focus:ring-red-500');
    el.classList.add('border-primary-200','focus:ring-primary-500');
    err && err.classList.add('hidden');
  }
  if (nome && nomeErr) nome.addEventListener('input', () => clearErr(nome, nomeErr));
  if (cognome && cognomeErr) cognome.addEventListener('input', () => clearErr(cognome, cognomeErr));
  if (email && emailErr) email.addEventListener('input', () => clearErr(email, emailErr));
  if (telefono && telErr) telefono.addEventListener('input', () => clearErr(telefono, telErr));
  if (textarea && charError) textarea.addEventListener('input', () => {
    textarea.classList.remove('border-red-300','focus:ring-red-500');
    textarea.classList.add('border-primary-200','focus:ring-primary-500');
  });
  const overlay = document.getElementById('idea-status-overlay');
  const card = document.getElementById('idea-status-card');
  if (overlay) {
    overlay.addEventListener('click', () => {
      overlay.style.display = 'none';
    });
    if (card) {
      card.addEventListener('click', (e) => {
        e.stopPropagation();
      });
    }
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        overlay.style.display = 'none';
      }
    });
  }
</script>
